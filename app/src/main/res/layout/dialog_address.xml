<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layoutDirection="rtl"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:cardBackgroundColor="@color/light"
        app:cardCornerRadius="@dimen/radius">


        <RelativeLayout
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/LBLDialogAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="افزودن آدرس"
                android:textColor="@color/primaryColor" />

            <EditText
                android:id="@+id/txtDialogAddress"
                android:textColor="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/LBLDialogAddress"
                android:layout_margin="8dp"
                android:background="@drawable/edt_border_primary"
                android:gravity="top"
                android:hint="آدرس"
                android:minHeight="150dp"
                android:padding="8dp"
                android:textColorHint="@color/secondaryLightColor" />

            <EditText
                android:id="@+id/txtVahedDialogAddress"
                android:textColor="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtDialogAddress"
                android:layout_margin="8dp"
                android:background="@drawable/edt_border_primary"
                android:gravity="top"
                android:hint="واحد"
                android:padding="8dp"
                android:textColorHint="@color/secondaryLightColor" />

            <EditText
                android:id="@+id/txtPelakDialogAddress"
                android:textColor="@color/dark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtVahedDialogAddress"
                android:layout_margin="8dp"
                android:background="@drawable/edt_border_primary"
                android:gravity="top"
                android:hint="پلاک"
                android:padding="8dp"
                android:textColorHint="@color/secondaryLightColor" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtPelakDialogAddress"
                android:padding="8dp"
                android:layout_margin="8dp"
                android:text="ثبت"
                />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>